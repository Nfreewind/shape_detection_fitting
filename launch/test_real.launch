<?xml version="1.0"?>
<launch>
  	<arg name="file_name" default="2017-01-12-19-25-31.bag"/>
  	<!--<arg name="file_name" default="cylinder.pcd"/>-->

  	<arg name="cloud_out" default="cylinders_pcl"/>
  	<arg name="rviz_file" default="cylinders.rviz"/>

	<!-- rosbag -->
	<node pkg="rosbag" type="play" name="player" output="screen" args="--clock $(find active_semantic_mapping)/data/$(arg file_name)"/>

	<!-- mapping -->
	<include file="$(find active_semantic_mapping)/launch/rtabmap+ork.launch">
  		<arg name="cloud_in" value="$(arg cloud_out)"/>
	</include>  

	<!-- segmentation -->
	<include file="$(find active_semantic_mapping)/launch/cylinder_segmentation.launch">
  		<arg name="cloud_in" value="$(arg cloud_out)"/>
	</include>  

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find active_semantic_mapping)/rviz/$(arg rviz_file)"/>
</launch>
